  <img class="{{if book.selected 'selected'}}" src="{{book.cover}}" alt="{{book.title}}" width="350" height="500"/>
  <div class="buttons">
    <button {{action 'remove' book}}>-</button>
    <button {{action 'add' book}}>+</button>
    <span>({{book.quantity}})</span>
  </div>
